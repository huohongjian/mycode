<% include public/header %>
<form id="regForm" class="flex b-p-0 c-p-5 d-p-100 e-p-120">
	<div class="a-1-1 c-1-2 e-1-3">
		<label>用户名:</label>
		<input name="login" type="text" placeholder="3-12个英文数字_">
	</div>
	<div class="a-1-1 c-1-2 e-1-3">
		<label>密码:</label>
		<input name="pwd" type="password" placeholder="3-12个英文数字_">
	</div>
	<div class="a-1-1 c-1-2 e-1-3">
		<label>重复密码:</label>
		<input name="pwd2" type="password" placeholder="必填">
	</div>
	<div class="a-1-1 c-1-2 e-1-3">
		<label>email:</label>
		<input name="email" type="email">
	</div>
	<div class="a-1-1 c-1-2 e-1-3">
		<label>电话:</label>
		<input name="phone" type="text">
	</div>
	<div class="a-1-1 c-1-2 e-1-3">
		<label>QQ:</label>
		<input name="qq" type="text">
	</div>
	<div class="a-1-1 c-1-2 e-1-3">
		<label>姓名:</label>
		<input name="name" type="text" placeholder="文章浏览时的显示名">
	</div>
	<div class="a-1-1 c-1-2 e-1-3">
		<label>昵称:</label>
		<input name="nick" type="text">
	</div>
	<div class="a-1-1 c-1-2 e-1-3 relative">
		<label>验证码:</label>
		<input name="vnum" type="text" placeholder="必填">
		<img id="vcode" src="/vnum" />
	</div>

	<div class="a-1-1 text-center">
		<input type="button" id="registButton" value="注册"></input>
		<input type="reset" value="取消"></input>
	</div>
</form>
