    <style type="text/css">
        #regForm {margin: 30px 0;}
        #regForm label {width:100px;text-align:right;display:inline-block;}
        #regForm input{width:55%;margin-bottom:10px;}
        #regForm img{position:absolute; top:6px; right:15%;}
        #regForm input[type=button],
        #regForm input[type=reset]{width:100px;}
        #regForm .flex > div{display:inline-block;}
