<% include public/header %>
<div class="flex b-p-0 c-p-5 d-p-100 e-p-120">
	<div class="a-1-1 d-2-3 f-3-4 left-frame">
		<div class="itemsSumInfo">
			本次查询共 <%= items.total %> 条信息，共 <%= Math.ceil(items.total / items.per) %> 页。
		</div>
		<% include public/searchList %>
		<% include public/pagination %>
	</div>
	<div class="a-1-1 d-1-3 f-1-4 right-frame">
		<% include public/searchBoard %>
		<% include public/friendLink  %>
	</div>
</div>
<% include public/footer %>
<script>
	var url = R.url(), p=R('.searchBoard');
	R('[name=status]', p).value = url.status || '0';
	R('[name=range]', p).value = url.range || 'title';
	R('[name=key]', p).value =  decodeURI(url.key || '');
</script>